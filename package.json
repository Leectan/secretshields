{
  "name": "secretshields",
  "displayName": "SecretShields â€” Secret Shield for AI Chat",
  "description": "Local-first clipboard secret masking. Prevents accidental secret leakage into AI chats, terminals, and pastebins.",
  "version": "0.3.1",
  "publisher": "secretshields",
  "license": "MIT",
  "icon": "media/shield.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/Leectan/secretshields"
  },
  "homepage": "https://leectan.github.io/secretshields/",
  "bugs": {
    "url": "https://github.com/Leectan/secretshields/issues"
  },
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "secrets",
    "security",
    "clipboard",
    "masking",
    "ai-safety"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "secretshields.maskClipboard",
        "title": "SecretShields: Mask Clipboard Now"
      },
      {
        "command": "secretshields.restoreLastSecret",
        "title": "SecretShields: Restore Last Secret (Time-Limited)"
      },
      {
        "command": "secretshields.showExposureLog",
        "title": "SecretShields: Show Exposure Log"
      },
      {
        "command": "secretshields.clearExposureLog",
        "title": "SecretShields: Clear Exposure Log"
      },
      {
        "command": "secretshields.markRotated",
        "title": "SecretShields: Mark Secret as Rotated"
      }
    ],
    "configuration": {
      "title": "SecretShields",
      "properties": {
        "secretshields.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable or disable SecretShields clipboard monitoring."
        },
        "secretshields.autoMask": {
          "type": "boolean",
          "default": true,
          "description": "Automatically mask secrets in clipboard when detected."
        },
        "secretshields.restoreTTLSeconds": {
          "type": "number",
          "default": 60,
          "minimum": 10,
          "maximum": 300,
          "description": "Seconds to allow restoring the original secret after masking."
        },
        "secretshields.pollIntervalMs": {
          "type": "number",
          "default": 1000,
          "minimum": 500,
          "maximum": 5000,
          "description": "Clipboard polling interval in milliseconds."
        },
        "secretshields.maskingSignal.mode": {
          "type": "string",
          "default": "statusBar",
          "enum": [
            "off",
            "statusBar",
            "output",
            "both"
          ],
          "enumDescriptions": [
            "No always-visible signal (toast notifications only).",
            "Show a short status bar pulse when masking occurs (helps if toasts are suppressed).",
            "Log masking events to the 'SecretShields' Output channel.",
            "Show status bar pulse and log to Output channel."
          ],
          "description": "When secrets are masked in the clipboard, emit an always-visible signal so you're not dependent on toast notifications."
        },
        "secretshields.detectors.awsKeys": {
          "type": "boolean",
          "default": true,
          "description": "Detect AWS access keys and secret keys."
        },
        "secretshields.detectors.githubTokens": {
          "type": "boolean",
          "default": true,
          "description": "Detect GitHub personal access tokens."
        },
        "secretshields.detectors.stripeKeys": {
          "type": "boolean",
          "default": true,
          "description": "Detect Stripe secret and restricted API keys (sk_*, rk_*)."
        },
        "secretshields.detectors.stripePublishableKeys": {
          "type": "boolean",
          "default": false,
          "description": "Detect Stripe publishable keys (pk_*). Disabled by default because publishable keys are designed to be public."
        },
        "secretshields.detectors.openaiKeys": {
          "type": "boolean",
          "default": true,
          "description": "Detect OpenAI API keys."
        },
        "secretshields.detectors.anthropicKeys": {
          "type": "boolean",
          "default": true,
          "description": "Detect Anthropic API keys."
        },
        "secretshields.detectors.googleApiKeys": {
          "type": "boolean",
          "default": true,
          "description": "Detect Google API keys."
        },
        "secretshields.detectors.databaseUrls": {
          "type": "boolean",
          "default": true,
          "description": "Detect database connection URLs with passwords."
        },
        "secretshields.detectors.sshPrivateKeys": {
          "type": "boolean",
          "default": true,
          "description": "Detect SSH private key headers."
        },
        "secretshields.detectors.jwts": {
          "type": "boolean",
          "default": true,
          "description": "Detect JSON Web Tokens."
        },
        "secretshields.detectors.vercelTokens": {
          "type": "boolean",
          "default": true,
          "description": "Detect Vercel API tokens and Blob tokens."
        },
        "secretshields.detectors.slackTokens": {
          "type": "boolean",
          "default": true,
          "description": "Detect Slack bot/user/app tokens and webhook URLs."
        },
        "secretshields.detectors.sendgridKeys": {
          "type": "boolean",
          "default": true,
          "description": "Detect SendGrid API keys."
        },
        "secretshields.detectors.shopifyTokens": {
          "type": "boolean",
          "default": true,
          "description": "Detect Shopify access tokens."
        },
        "secretshields.detectors.twilioKeys": {
          "type": "boolean",
          "default": true,
          "description": "Detect Twilio Account SIDs and API Key SIDs."
        },
        "secretshields.detectors.digitaloceanTokens": {
          "type": "boolean",
          "default": true,
          "description": "Detect DigitalOcean personal access tokens."
        },
        "secretshields.detectors.npmTokens": {
          "type": "boolean",
          "default": true,
          "description": "Detect npm access tokens."
        },
        "secretshields.detectors.pypiTokens": {
          "type": "boolean",
          "default": true,
          "description": "Detect PyPI upload tokens."
        },
        "secretshields.detectors.hashicorpVaultTokens": {
          "type": "boolean",
          "default": true,
          "description": "Detect HashiCorp Vault service and batch tokens."
        },
        "secretshields.detectors.dopplerTokens": {
          "type": "boolean",
          "default": true,
          "description": "Detect Doppler personal, service, and CLI tokens."
        },
        "secretshields.detectors.linearKeys": {
          "type": "boolean",
          "default": true,
          "description": "Detect Linear API keys."
        },
        "secretshields.detectors.grafanaTokens": {
          "type": "boolean",
          "default": true,
          "description": "Detect Grafana service account tokens."
        },
        "secretshields.detectors.newrelicKeys": {
          "type": "boolean",
          "default": true,
          "description": "Detect New Relic user and ingest API keys."
        },
        "secretshields.detectors.herokuTokens": {
          "type": "boolean",
          "default": true,
          "description": "Detect Heroku OAuth tokens."
        },
        "secretshields.detectors.planetscaleTokens": {
          "type": "boolean",
          "default": true,
          "description": "Detect PlanetScale service tokens and passwords."
        },
        "secretshields.detectors.dockerTokens": {
          "type": "boolean",
          "default": true,
          "description": "Detect Docker Hub personal access tokens."
        },
        "secretshields.detectors.resendKeys": {
          "type": "boolean",
          "default": true,
          "description": "Detect Resend API keys."
        },
        "secretshields.detectors.supabaseKeys": {
          "type": "boolean",
          "default": true,
          "description": "Detect Supabase secret keys."
        },
        "secretshields.detectors.netlifyTokens": {
          "type": "boolean",
          "default": true,
          "description": "Detect Netlify personal access tokens."
        },
        "secretshields.detectors.appwriteKeys": {
          "type": "boolean",
          "default": true,
          "description": "Detect Appwrite standard API keys."
        },
        "secretshields.detectors.cloudflareKeys": {
          "type": "boolean",
          "default": true,
          "description": "Detect Cloudflare Origin CA keys."
        },
        "secretshields.detectors.discordTokens": {
          "type": "boolean",
          "default": true,
          "description": "Detect Discord webhook URLs."
        },
        "secretshields.countdownMinutes.critical": {
          "type": "number",
          "default": 15,
          "description": "Rotation reminder countdown (minutes) for critical severity secrets."
        },
        "secretshields.countdownMinutes.high": {
          "type": "number",
          "default": 60,
          "description": "Rotation reminder countdown (minutes) for high severity secrets."
        },
        "secretshields.countdownMinutes.medium": {
          "type": "number",
          "default": 240,
          "description": "Rotation reminder countdown (minutes) for medium severity secrets."
        },
        "secretshields.editorPasteMasking.mode": {
          "type": "string",
          "default": "offer",
          "enum": [
            "off",
            "offer",
            "auto"
          ],
          "enumDescriptions": [
            "SecretShields does not participate in editor paste at all.",
            "Show 'Paste with SecretShields masking' as an alternative in the paste widget. Normal paste remains default.",
            "Attempt to make masked paste the default option. Ordering is best-effort and depends on other providers."
          ],
          "description": "Controls editor paste masking behavior. 'offer' shows a masked paste option in the paste widget; 'auto' tries to make it default; 'off' disables it."
        }
      }
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "secretshields",
          "title": "SecretShields",
          "icon": "media/shield.svg"
        }
      ]
    },
    "views": {
      "secretshields": [
        {
          "id": "secretshields.exposureLog",
          "name": "Exposure Log"
        }
      ]
    }
  },
  "scripts": {
    "build": "node esbuild.config.mjs",
    "watch": "node esbuild.config.mjs --watch",
    "lint": "eslint src --ext ts",
    "test": "vitest run",
    "test:unit": "vitest run",
    "test:watch": "vitest",
    "test:integration": "vscode-test --label integration",
    "test:all": "npm run test:unit && npm run test:integration",
    "package": "npx vsce package",
    "vscode:prepublish": "npm run build"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.3.8",
    "@vscode/vsce": "^2.22.0",
    "esbuild": "^0.20.0",
    "eslint": "^8.56.0",
    "ovsx": "^0.8.0",
    "prettier": "^3.2.0",
    "typescript": "^5.3.0",
    "vitest": "^1.2.0"
  }
}
